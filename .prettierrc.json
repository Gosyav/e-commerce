{
  "singleQuote": true,
  "endOfLine": "lf",
  "semi": true,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "printWidth": 80,
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "^react",
    "<THIRD_PARTY_MODULES>",
    "^~/shared/(.*)$",
    "^~/store/(.*)$",
    "^~/pages/(.*)$",
    "^~/modules/(.*)$",
    "^~/components/(.*)$",
    "^~/ui/(.*)$",
    "^~/assets/(.*)$",
    "^[./]"
  ]
}
